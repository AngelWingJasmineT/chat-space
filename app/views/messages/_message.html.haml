.messages__message
  .messages__message__upper-message
    .messages__message__upper-message__user-name
      = message.user.name
    .messages__message__upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__message__lower-message
    - if message.content.present?
      %p.messages__message__lower-message__content
        = message.content
    = image_tag message.image.url, class: 'messages__message__lower-message__image' if message.image.present?