.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        =link_to new_group_path, class: "side-header__box__menu__new-group" do
          = icon('fa fa-edit', 'pencil-squqre-o')
          %span<>
        =link_to edit_user_path(current_user), class: "side-header__box__menu__edit-user" do
          = icon('fa fa-cog', 'cog')
          %span<>

  .groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group) do
          .groups__group__group-name
            = group.name
          .groups__group__latest-message
            = group.show_last_message